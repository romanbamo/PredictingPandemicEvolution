public abstract class FitxerIncidencia {
    public static List<Incidencia> llegir_incidencia(File fitxer) throws IOException {
        List<Incidencia> incidenciaList = new ArrayList<>();
        try (BufferedReader br = new BufferedReader(new FileReader(fitxer))) {
            String line;
            while ((line = br.readLine()) != null) {
                String[] data = line.split(","); // Suponent CSV format
                if (data.length >= 3) {
                    incidenciaList.add(new Incidencia(data[0], Integer.parseInt(data[1]), Integer.parseInt(data[2])));
                }
            }
        }
        return incidenciaList;
    }
}
