public abstract class FitxerRegio {
    public static List<Regio> llegir_regions(File fitxer) throws IOException {
        List<Regio> regioList = new ArrayList<>();
        try (BufferedReader br = new BufferedReader(new FileReader(fitxer))) {
            String line;
            Regio currentRegio = null;
            while ((line = br.readLine()) != null) {
                if (line.startsWith("nom")) {
                    if (currentRegio != null) regioList.add(currentRegio);
                    currentRegio = new Regio(line.split(" ")[1]);
                } else if (line.startsWith("habitants")) {
                    currentRegio.setHabitants(Integer.parseInt(line.split(" ")[1]));
                } else if (line.startsWith("mob_interna")) {
                    currentRegio.setMobilitat(Double.parseDouble(line.split(" ")[1]));
                }
            }
            if (currentRegio != null) regioList.add(currentRegio);
        }
        return regioList;
    }
}
